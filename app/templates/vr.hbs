<a-scene>
  <a-assets>
    {{!-- https://clara.io/view/243cfbbf-9ce6-4774-94b5-35ba65be2bc2 --}}
    <a-asset-item id="obj" src="{{rootURL}}assets/product/iphone-5s.obj"></a-asset-item>
    <a-asset-item id="mtl" src="{{rootURL}}assets/product/iphone-5s.mtl"></a-asset-item>
  </a-assets>

  <a-entity
    layout="
      type: box;
      reverse: true;
      margin: 2;
    "
    position="-1.5 -.5 -5"
  >
    {{vr/product-list
      products
      selectProduct=(route-action "addToCart" cart)
    }}

    {{vr/cart-component
      cart
      selectProduct=(route-action "removeFromCart" cart)
    }}
  </a-entity>

  <a-entity camera look-controls mouse-cursor />
</a-scene>